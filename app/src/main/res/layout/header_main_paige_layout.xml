<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_toolbar_img"
    android:background="@color/white_color"
    >

    <ImageView
        android:id="@+id/home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/home" />
    <ImageView
        android:id="@+id/ab_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="@dimen/detail_margin_5dp"
        android:src="@drawable/textlogo"
        android:layout_alignBottom="@+id/home"
        android:layout_alignTop="@+id/home" />
    <ImageView
        android:id="@+id/ab_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ab_logo"
        android:src="@drawable/search"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/star"
        />
</RelativeLayout>